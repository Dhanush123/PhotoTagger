<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tiles"
    android:id="@+id/mainPage"
    >
    <LinearLayout
        android:id="@+id/linearLay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
        <include
            layout="@layout/app_bar"
            />
        </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLay"
        android:id="@+id/linearLay2">
        <Button
            android:layout_height="match_parent"
            android:text="@string/takePhotoButton"
            android:id="@+id/takePhotoButton"
            android:layout_weight="1"
            android:layout_width="0dp"
            />
        <Button
            android:layout_height="match_parent"
            android:text="@string/choosePhotoButton"
            android:id="@+id/choosePhotoButton"
            android:layout_weight="1"
            android:layout_width="0dp"
            />
        <Button
            android:layout_height="match_parent"
            android:text="@string/retryIDButton"
            android:id="@+id/retryIDButton"
            android:layout_weight="1"
            android:layout_width="0dp"
            />
        <Button
            android:layout_height="match_parent"
            android:text="@string/superScanButton"
            android:id="@+id/videoScanButton"
            android:layout_weight="1"
            android:layout_width="0dp"
            />
 </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/photoShow"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/photoTags"
        android:contentDescription="@string/imageShow"
        android:layout_below="@+id/linearLay2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/photoTags"
        android:id="@+id/photoTags"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/photoShow"
        android:layout_alignEnd="@+id/photoShow"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#FFF"
        android:textStyle="bold|italic"
        android:baselineAligned="false"
        android:padding="10dp"/>


</RelativeLayout>
